---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const title = "Kids & Family Resources";

// Get Data
const familyItems = await getCollection('family');

// Filter items
const books = familyItems.filter(i => i.data.type === 'book');
const cards = familyItems.filter(i => i.data.type === 'card');
const backdrops = familyItems.filter(i => i.data.type === 'backdrop');
---

<BaseLayout title={title}>

    <div class="text-center mb-16">
        <div class="lang-en">
            <h1 class="text-4xl md:text-5xl font-extrabold text-gray-800 dark:text-gray-100 mb-4">
                Kids & <span class="text-blue-600 dark:text-blue-400">Family</span>
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400">Creative resources to help your family grow in faith.</p>
        </div>
        <div class="lang-es hidden">
            <h1 class="text-4xl md:text-5xl font-extrabold text-gray-800 dark:text-gray-100 mb-4">
                NiÃ±os y <span class="text-green-600 dark:text-green-400">Familia</span>
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400">Recursos creativos para ayudar a su familia a crecer en la fe.</p>
        </div>
    </div>

    {books.length > 0 && (
        <section class="mb-20">
            <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
                <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 lang-en">ðŸ“š Coloring & Story Books</h2>
                <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 lang-es hidden">ðŸ“š Libros para Colorear</h2>
                
                <div class="flex gap-2 lang-en">
                    <button class="filter-btn active px-4 py-1 rounded-full bg-blue-600 text-white text-sm font-bold transition-colors" data-filter="all" data-section="book">All</button>
                    <button class="filter-btn px-4 py-1 rounded-full bg-gray-200 text-gray-600 text-sm font-bold transition-colors" data-filter="kids" data-section="book">Kids</button>
                    <button class="filter-btn px-4 py-1 rounded-full bg-gray-200 text-gray-600 text-sm font-bold transition-colors" data-filter="adults" data-section="book">Adults</button>
                </div>
                
                <div class="flex gap-2 lang-es hidden">
                    <button class="filter-btn active px-4 py-1 rounded-full bg-green-600 text-white text-sm font-bold transition-colors" data-filter="all" data-section="book">Todos</button>
                    <button class="filter-btn px-4 py-1 rounded-full bg-gray-200 text-gray-600 text-sm font-bold transition-colors" data-filter="kids" data-section="book">NiÃ±os</button>
                    <button class="filter-btn px-4 py-1 rounded-full bg-gray-200 text-gray-600 text-sm font-bold transition-colors" data-filter="adults" data-section="book">Adultos</button>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" id="book-grid">
                {books.map(item => (
                    <a href={`/family/${item.slug}/`} class="book-item group block bg-white dark:bg-gray-800 rounded-2xl shadow hover:shadow-xl transition-all" data-tag={item.data.filter_tag}>
                        <div class="h-64 overflow-hidden rounded-t-2xl relative">
                            <img src={item.data.gallery[0]} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                            <span class="absolute top-2 right-2 bg-black/60 text-white text-xs px-2 py-1 rounded font-bold uppercase">{item.data.filter_tag}</span>
                        </div>
                        <div class="p-4">
                            <div class="lang-en">
                                <h3 class="font-bold text-gray-800 dark:text-gray-100 mb-1 truncate">{item.data.title_en}</h3>
                                <p class="text-sm text-gray-500 dark:text-gray-400 line-clamp-2 mb-2">{item.data.short_desc_en}</p>
                                <p class="text-sm text-blue-600 font-bold">View Details &rarr;</p>
                            </div>
                            <div class="lang-es hidden">
                                <h3 class="font-bold text-gray-800 dark:text-gray-100 mb-1 truncate">{item.data.title_es}</h3>
                                <p class="text-sm text-gray-500 dark:text-gray-400 line-clamp-2 mb-2">{item.data.short_desc_es}</p>
                                <p class="text-sm text-green-600 font-bold">Ver Detalles &rarr;</p>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </section>
    )}

    {cards.length > 0 && (
        <section class="mb-20">
            <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
                <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 lang-en">ðŸ’Œ Greeting Cards</h2>
                <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 lang-es hidden">ðŸ’Œ Tarjetas de FelicitaciÃ³n</h2>
                
                <div class="flex gap-2 lang-en">
                    <button class="filter-btn active px-4 py-1 rounded-full bg-blue-600 text-white text-sm font-bold transition-colors" data-filter="all" data-section="card">All</button>
                    <button class="filter-btn px-4 py-1 rounded-full bg-gray-200 text-gray-600 text-sm font-bold transition-colors" data-filter="birthday" data-section="card">Birthday</button>
                    <button class="filter-btn px-4 py-1 rounded-full bg-gray-200 text-gray-600 text-sm font-bold transition-colors" data-filter="baptism" data-section="card">Baptism</button>
                </div>

                <div class="flex gap-2 lang-es hidden">
                    <button class="filter-btn active px-4 py-1 rounded-full bg-green-600 text-white text-sm font-bold transition-colors" data-filter="all" data-section="card">Todas</button>
                    <button class="filter-btn px-4 py-1 rounded-full bg-gray-200 text-gray-600 text-sm font-bold transition-colors" data-filter="birthday" data-section="card">CumpleaÃ±os</button>
                    <button class="filter-btn px-4 py-1 rounded-full bg-gray-200 text-gray-600 text-sm font-bold transition-colors" data-filter="baptism" data-section="card">Bautismo</button>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" id="card-grid">
                {cards.map(item => (
                    <a href={`/family/${item.slug}/`} class="card-item group block bg-white dark:bg-gray-800 rounded-2xl shadow hover:shadow-xl transition-all" data-tag={item.data.filter_tag}>
                        <div class="h-48 overflow-hidden rounded-t-2xl relative">
                            <img src={item.data.gallery[0]} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                        </div>
                        <div class="p-4">
                            <div class="lang-en">
                                <h3 class="font-bold text-gray-800 dark:text-gray-100 mb-1 truncate">{item.data.title_en}</h3>
                                <p class="text-sm text-gray-500 dark:text-gray-400 line-clamp-2 mb-2">{item.data.short_desc_en}</p>
                                <p class="text-sm text-blue-600 font-bold">View Details &rarr;</p>
                            </div>
                            <div class="lang-es hidden">
                                <h3 class="font-bold text-gray-800 dark:text-gray-100 mb-1 truncate">{item.data.title_es}</h3>
                                <p class="text-sm text-gray-500 dark:text-gray-400 line-clamp-2 mb-2">{item.data.short_desc_es}</p>
                                <p class="text-sm text-green-600 font-bold">Ver Detalles &rarr;</p>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </section>
    )}

    {backdrops.length > 0 && (
        <section class="mb-20">
            <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-8 lang-en">ðŸŽ‰ Party Backdrops</h2>
            <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-8 lang-es hidden">ðŸŽ‰ Fondos de Fiesta</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {backdrops.map(item => (
                    <a href={`/family/${item.slug}/`} class="group block relative rounded-2xl overflow-hidden h-64 shadow-lg">
                        <img src={item.data.gallery[0]} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent flex flex-col justify-end p-6">
                            <div class="lang-en">
                                <h3 class="text-2xl font-bold text-white">{item.data.title_en}</h3>
                                <p class="text-gray-300 text-sm">Premium Design â€¢ View on Gumroad</p>
                            </div>
                            <div class="lang-es hidden">
                                <h3 class="text-2xl font-bold text-white">{item.data.title_es}</h3>
                                <p class="text-gray-300 text-sm">DiseÃ±o Premium â€¢ Ver en Gumroad</p>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </section>
    )}

    <script is:inline>
        // Block scope to prevent conflicts
        {
            function updateFamilyPageLang(lang) {
                const enElements = document.querySelectorAll('.lang-en');
                const esElements = document.querySelectorAll('.lang-es');

                if (lang === 'es') {
                    enElements.forEach(el => el.classList.add('hidden'));
                    esElements.forEach(el => el.classList.remove('hidden'));
                } else {
                    esElements.forEach(el => el.classList.add('hidden'));
                    enElements.forEach(el => el.classList.remove('hidden'));
                }
            }

            window.addEventListener('languageChanged', (e) => {
                updateFamilyPageLang(e.detail);
            });

            const currentLang = localStorage.getItem('lang') || 'en';
            updateFamilyPageLang(currentLang);

            // Filter Logic
            const buttons = document.querySelectorAll('.filter-btn');
            buttons.forEach(btn => {
                btn.addEventListener('click', () => {
                    const filter = btn.dataset.filter;
                    const section = btn.dataset.section;
                    // Select current language container
                    const langContainer = btn.closest('.lang-en') ? '.lang-en' : '.lang-es';
                    const container = document.getElementById(`${section}-grid`);
                    const items = container.querySelectorAll(`.${section}-item`);
                    
                    // Update Button Styles (Only in current language group)
                    const siblings = btn.parentElement.children;
                    for (let sib of siblings) {
                        if(sib.closest(langContainer)) {
                            sib.classList.remove('bg-blue-600', 'bg-green-600', 'text-white');
                            sib.classList.add('bg-gray-200', 'text-gray-600');
                        }
                    }
                    
                    btn.classList.remove('bg-gray-200', 'text-gray-600');
                    // Color based on language
                    if(langContainer === '.lang-en') {
                        btn.classList.add('bg-blue-600', 'text-white');
                    } else {
                        btn.classList.add('bg-green-600', 'text-white');
                    }

                    // Show/Hide Items
                    items.forEach(item => {
                        if (filter === 'all' || item.dataset.tag === filter) {
                            item.classList.remove('hidden');
                        } else {
                            item.classList.add('hidden');
                        }
                    });
                });
            });
        }
    </script>

</BaseLayout>