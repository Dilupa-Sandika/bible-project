---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Support ScriptureHub";
const description = "Help us keep ScriptureHub free and accessible to everyone. Donate as little as $1.";

// ‡∂î‡∂∂‡∑ö Payment Links ‡∂∏‡∑ô‡∂≠‡∂±‡∂ß ‡∂Ø‡∑è‡∂±‡∑ä‡∂±
const links = {
    monthly_1: "https://buy.stripe.com/your-1-dollar-link", 
    one_time_any: "https://www.paypal.com/donate/?hosted_button_id=YOUR_ID",
    coffee: "https://www.buymeacoffee.com/yourname"
};
---

<BaseLayout title={title} description={description}>

    <div class="max-w-4xl mx-auto">
        
        <div class="text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-extrabold text-gray-800 dark:text-gray-100 mb-4">
                Help Us Spread the <span class="text-blue-600 dark:text-blue-400">Word</span>
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
                ScriptureHub is a free resource built to share the wisdom of the Bible. Your support helps us keep the servers running.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
            
            <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-lg border border-gray-100 dark:border-gray-700 p-8 text-center">
                <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-2">
                    Become a Supporter
                </h2>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">Join our mission for just $1.</p>

                <a href={links.monthly_1} target="_blank" class="block w-full p-4 mb-6 rounded-xl border-2 border-blue-500 bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 font-bold shadow-sm hover:scale-105 transition-transform flex justify-between items-center">
                    <span>Monthly Support</span>
                    <span class="bg-blue-600 text-white text-xs px-3 py-1 rounded-full">$1 / mo</span>
                </a>

                <div class="relative flex py-2 items-center mb-6">
                    <div class="flex-grow border-t border-gray-200 dark:border-gray-700"></div>
                    <span class="flex-shrink-0 mx-4 text-gray-400 text-xs uppercase font-bold">One-Time Gifts</span>
                    <div class="flex-grow border-t border-gray-200 dark:border-gray-700"></div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <a href={links.coffee} target="_blank" class="flex items-center justify-center gap-2 py-3 rounded-xl bg-[#FFDD00] hover:bg-[#FFDD00]/90 text-black font-bold shadow-md transition-all">
                        ‚òï Coffee ($3)
                    </a>
                    <a href={links.one_time_any} target="_blank" class="flex items-center justify-center gap-2 py-3 rounded-xl bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-white font-bold transition-all">
                        PayPal
                    </a>
                </div>
            </div>

            <div class="space-y-6">
                <div class="bg-blue-50 dark:bg-gray-700/50 p-6 rounded-2xl border border-blue-100 dark:border-gray-600">
                    <h3 class="font-bold text-lg text-blue-800 dark:text-blue-300 mb-2 flex items-center gap-2">
                        ‚ù§Ô∏è Why $1 Matters?
                    </h3>
                    <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed">
                        It might seem small, but if 100 people give $1, our server costs are covered forever. It's a small amount for you, but a huge blessing for us.
                    </p>
                </div>

                <div class="bg-green-50 dark:bg-green-900/20 p-6 rounded-2xl border border-green-100 dark:border-green-800">
                    <h3 class="font-bold text-lg text-green-800 dark:text-green-300 mb-2">
                        üéÅ Supporter Perks
                    </h3>
                    <ul class="text-gray-600 dark:text-gray-300 text-sm text-left space-y-3">
                        <li class="flex gap-2">‚úÖ <span class="flex-1">Early access to new Coloring Books</span></li>
                        <li class="flex gap-2">‚úÖ <span class="flex-1">Direct email support from our team</span></li>
                        <li class="flex gap-2">‚úÖ <span class="flex-1">Your name in our "Thank You" list</span></li>
                    </ul>
                </div>
            </div>

        </div>
    </div>

</BaseLayout>