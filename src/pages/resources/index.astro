---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Data Sort
const allPosts = (await getCollection('articles')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const title = "Christian Resources & Articles";
---

<BaseLayout title={title}>

    <div class="text-center mb-12">
        <div class="lang-en">
            <h1 class="text-4xl md:text-5xl font-extrabold text-gray-800 dark:text-gray-100 mb-4">
                Resources & <span class="text-blue-600 dark:text-blue-400">Articles</span>
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
                Deepen your understanding with our collection of Bible studies and guides.
            </p>
        </div>
        <div class="lang-es hidden">
            <h1 class="text-4xl md:text-5xl font-extrabold text-gray-800 dark:text-gray-100 mb-4">
                Recursos y <span class="text-green-600 dark:text-green-400">Art√≠culos</span>
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
                Profundiza tu entendimiento con nuestra colecci√≥n de estudios b√≠blicos.
            </p>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {allPosts.map((post) => (
            <a href={`/resources/${post.slug}/`} class="group bg-white dark:bg-gray-800 rounded-2xl shadow-md border border-gray-100 dark:border-gray-700 overflow-hidden hover:shadow-xl transition-all hover:-translate-y-1">
                
                <div class="h-48 overflow-hidden relative">
                    {post.data.image ? (
                        <img src={post.data.image} alt={post.data.title_en} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
                    ) : (
                        <div class="w-full h-full bg-blue-100 dark:bg-gray-700 flex items-center justify-center text-4xl">üìñ</div>
                    )}
                </div>

                <div class="p-6">
                    <div class="flex gap-2 mb-3">
                        {post.data.tags.slice(0, 2).map(tag => (
                            <span class="text-xs font-bold text-blue-600 dark:text-blue-400 uppercase tracking-wide">#{tag}</span>
                        ))}
                    </div>
                    
                    <div class="lang-en">
                        <h2 class="text-xl font-bold text-gray-800 dark:text-gray-100 mb-2 group-hover:text-blue-600 transition-colors">{post.data.title_en}</h2>
                        <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-3">{post.data.description_en}</p>
                        <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700 flex justify-between items-center text-xs text-gray-500">
                            <span>{post.data.pubDate.toISOString().split('T')[0]}</span>
                            <span class="font-bold flex items-center gap-1">Read Article &rarr;</span>
                        </div>
                    </div>

                    <div class="lang-es hidden">
                        <h2 class="text-xl font-bold text-gray-800 dark:text-gray-100 mb-2 group-hover:text-green-600 transition-colors">{post.data.title_es}</h2>
                        <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-3">{post.data.description_es}</p>
                        <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700 flex justify-between items-center text-xs text-gray-500">
                            <span>{post.data.pubDate.toISOString().split('T')[0]}</span>
                            <span class="font-bold flex items-center gap-1">Leer Art√≠culo &rarr;</span>
                        </div>
                    </div>

                </div>
            </a>
        ))}
    </div>

    <script is:inline>
        {
            function updateResLang(lang) {
                const enElements = document.querySelectorAll('.lang-en');
                const esElements = document.querySelectorAll('.lang-es');
                if (lang === 'es') {
                    enElements.forEach(el => el.classList.add('hidden'));
                    esElements.forEach(el => el.classList.remove('hidden'));
                } else {
                    esElements.forEach(el => el.classList.add('hidden'));
                    enElements.forEach(el => el.classList.remove('hidden'));
                }
            }
            
            // Listen for global event
            window.addEventListener('languageChanged', (e) => updateResLang(e.detail));
            
            // Initial Load
            const savedLang = localStorage.getItem('lang') || 'en';
            updateResLang(savedLang);
        }
    </script>

</BaseLayout>